<%= form_for([@post, @post.comments.build], :html => { :class => 'form-horizontal'},remote: true) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :comment , :class => "control-label"%><br />
      <div class="controls">
        <%= f.text_area :body, :class=> "text-field" %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => "btn btn-primary"%>
    </div>
  </fieldset>
<% end %>
<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Friend's posts</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= post.body %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'show post', post_path(post)%></td>
      </tr>
    <% end %>

  </tbody>
</table>
<table>
  <thead>
    <tr>
      <th>Your posts</th>
    </tr>
  </thead>

  <tbody>
    <% @my_posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'show post', post_path(post)%></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>


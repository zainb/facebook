<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th></th>
      </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'Add Comments', post_comments_url(post)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


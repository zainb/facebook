<table class='table table-striped'>
  <thead>
    <tr>
      <th>Your posts</th>
    </tr>
  </thead>

  <tbody>
    <% @my_posts.find_each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?', :class => 'btn btn-mini' } %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'show post', post_path(post), :class => 'btn btn-mini'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
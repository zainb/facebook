
<% content_for :title do %>
	Messages
<% end %>
</br>
</br>
<h2>Your Messages</h2>
<ul>
  <% current_user.messages.each do |message| %>
  	<%if message.to_from == false%>
  		<li><% sender = message.to_from %>
  			<h4><%= User.find(sender).email %></h4>
				<%=  message.body %>
  		</li>
  	<% end %>
  	</br>
  <% end %>  
</ul>
<%= link_to 'send message', new_message_path %>


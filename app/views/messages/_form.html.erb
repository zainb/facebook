<%= form_for(@message,:html => { :class => 'form-horizontal'}) do |f| %>
  <div class="controll-group">
    <%= f.label :send_to, :class => "conroll-label" %><br />
    <div class="controlls">
      <%= f.text_area :to_from , :class => "text-area"%>
    </div>
  </div>
  <div class="controll-group">
    <%= f.label :body, :class => "conroll-label" %><br />
    <div class="controlls">
    <%= f.text_area :body, :class => "text-area" %>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-primary"%>
  </div>
<% end %>